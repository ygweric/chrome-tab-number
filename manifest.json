{
  "name": "Tab Number",
  "description": "Show tab number",
  "version": "1.0.1",
  "manifest_version": 2,
  "permissions": ["tabs", "*://*/*"],
  "background": {
    "scripts": ["tabNumber.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_icon" : "icon.png",
    "default_title": "Show tab number"
  }
}
